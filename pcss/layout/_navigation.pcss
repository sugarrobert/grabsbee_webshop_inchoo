.menu-wrapper {
  @mixin absolute 0, 0, auto, auto;
  max-width: 22.5rem;
  min-height: 40rem;
  background: var(--color-white);
  visibility: hidden;
  opacity: 0;
  z-index: 2;
}

.menu-title {
  padding-top: 4.5rem;
  @mixin body-font-size 0.875rem, 1.5rem, bold;
  text-transform: uppercase;
  color: var(--primary__color);
}

.menu__list {
  @mixin flex column, $vcenter, center;
  margin-bottom: 14.5rem;
}

.menu__list-item {
  @mixin body-font-size 0.75rem, 1.5rem, bold;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text__color);
  position: relative;
  padding: 0.6rem 0;
  margin: 0;
  box-shadow: 0px 1px 0px var(--primary-10);
  cursor: pointer;

  &:before {
    @mixin icon-font-display "\e909";
    position: absolute;
    right: 0;
  }
}

.menu__list-item-icon {
  padding: 0 0.313rem;
}

.menu__list-item--second-container {
  display: none;
}

.menu__list-item--second {
  padding: 0.625rem;
  display: flex;
  align-items: center;
  @mixin body-font-size 0.75rem, 1.5rem, normal;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  margin: 0;
  cursor: pointer;
  
  @media(--large){
    cursor: default;
  }
}

.menu__list-item--second-link {
  font-weight: normal;
  text-decoration: none;
  color: var(--text__color);
}

.menu__list--third {
  padding-left: 1.875rem;
  padding-bottom: 0.625rem;
  display: none;
}

.menu__list-item--third-link {
  font-weight: normal;
  text-decoration: none;
  color: var(--text__color);
  font-size: 0.688rem;
}

@media(--large) {
  .lg-menu-wrapper{
    width: 100%;
    min-height: 2rem;
    left: 0;
    top: 63px;
    background: var(--secondary__color);
    visibility: visible;
    opacity: 1;
  }

  .lg-menu__list {
    @mixin flex row, $vcenter, flex-start, wrap;
    margin: 0;
  }

  .lg-menu__list-item {
    color: var(--color-white);
    padding: 0.75rem 1rem;
    border: none;
    box-shadow: none;
  }

  .lg-menu__list-item--second-container {
    position: absolute;
    display: flex;
    justify-content: center;
    left: 0;
    width: 100%;
    background: var(--color-white);
    visibility: hidden;
    opacity: 0;
  }

  .lg-menu__list-item-second-wrapper {
    display: flex;
    flex-direction: column;

    padding: 0.5rem 1rem 1rem;
  }

  .lg-menu__list-item--second {
    padding: 0.625rem 0;
    font-weight: bold;
    display: block;
  }

  .lg-menu-list--third {
    padding: 0;
    display: block;
  }
}