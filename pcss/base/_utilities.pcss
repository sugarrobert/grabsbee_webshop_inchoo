.display-block {
  display: block;
}

.no-scroll {
  overflow: hidden;
  height: 100%;
}

.visualy-hidden {
  @mixin no-display;
}

.visualy-hidden--mid {
  @media (--mid) {
    @mixin no-display;
  }
}

.visualy-hidden--desktop {
  @media (--large) {
    @mixin no-display;
  }
}

.active {
  visibility: visible;
  opacity: 1;

  @media (--mid) {
    visibility: visible;
    opacity: 1;
  }

  @media (--large) {
    visibility: visible;
    opacity: 1;
  }
}